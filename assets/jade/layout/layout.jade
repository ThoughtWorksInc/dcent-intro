include ../mixins/_helpers
include ../mixins/_view_helpers

- var bodyClass = ""
block vars

doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
      block title
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="format-detection", content="telephone=no")
    link(rel="icon" type="image/png" href="favicon.png")
    block headerMeta

    +stylesheetLinkTag("application","screen")

    block headerScripts

  body(class="#{bodyClass}")
    .header(role="banner")
      .header__inner.middle-container
        .header__logo
          span.visuallyhidden D-Cent
        h1.page_title Technologies for the 21st Century democracy
        .intro
          p.lede D-CENT is a Europe-wide project creating privacy-aware tools and applications for direct democracy and economic empowerment.
          p We have a number of offerings to help social engagement within your organisation:
          a.button.button--white(href="#readmore") Read more

    .main-content
      block content
    block footerScripts
